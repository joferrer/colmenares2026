---
import { Image } from "astro:assets";
import fotoColmenares from "../../assets/fotos/COLMENARES.webp";
---

<section class="flex flex-col w-full items-center segmento">
  <!-- Presentacion -->
  <div
    class:list={[
      "self-start w-full text-center text-6xl md:text-[12rem] lg:text-[12rem] mb-3 md:mt-16 text-(--cd-oscuro) ",
      "md:relative md:h-xl md:text-start md:px-20 lg:px-0 md:mx-auto",
    ]}
  >
    <div class:list={["md:absolute lg:w-full md:top-16 lg:top-27"]}>
      <div
        class:list={[
          "flex w-full justify-center text-center md:grid md:grid-cols-6 md:gap-y-2 md:gap-x-2 lg:gap-y-1 homey-title",
        ]}
      >
        <div
          class="xl:ml-50 lg:ml-20 md:col-span-1 md:col-start-1 -z-10 estefania-shift"
        >
          Estefania&nbsp;
        </div>
        <div class="lg:ml-50 md:mt-30 md:col-span-1 md:col-start-3 -rotate-2">
          Colmenares
        </div>
      </div>
    </div>
  </div>
  <!-- foto -->
  <div class:list={["relative w-80 -z-20", "md:top-10 md:w-xl md:h-xl"]}>
    <div
      class:list={[
        "bg-(--cd-azul) w-64 h-11 absolute -z-10 top-8 -rotate-2 left-2 rounded-sm",
        "md:w-xl md:h-20 lg:w-4xl lg:h-40 lg:-left-65",
      ]}
    >
    </div>
    <div
      class:list={[
        "bg-(--cd-rojo) w-40 h-11 absolute -z-10 left-10 top-20 -rotate-2 rounded-sm",
        "md:w-80 md:h-20 md:top-30 lg:w-lg lg:h-40 lg:-left-30 lg:top-49",
      ]}
    >
    </div>
    <div
      class:list={[
        "bg-(--cd-amarillo) w-24 h-11 absolute -z-10 left-50 top-19 -rotate-2 rounded-sm",
        "md:w-44 md:h-20 md:top-28 md:left-85 lg:w-96 lg:h-40 lg:top-46",
      ]}
    >
    </div>
  </div>

  <Image
    fetchpriority="high"
    src={fotoColmenares}
    class:list={[
      "foto-colmenares object-cover w-52 h-60 -z-10",
      "md:w-96 md:h-10/12",
      "cursor-pointer",
    ]}
    style={"view-transition-name: foto-colmenares"}
    alt="Foto de Estefania Colmenares"
  />
  <div class="relative z-20 flex items-center justify-center">
    <a
      href="#noticias"
      class="scroll-cue absolute bottom-5 flex items-center gap-2 rounded-full bg-(--cd-oscuro) text-white px-4 py-3 shadow-lg transition-transform duration-300 hover:translate-y-1 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-(--cd-amarillo)"
    >
      <span
        class="arrow-badge grid h-6 w-6 place-items-center rounded-full bg-white/15"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2.2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="h-4 w-4"
        >
          <polyline points="6 10 12 16 18 10"></polyline>
        </svg>
      </span>
    </a>
  </div>

  <style>
    .foto-colmenares {
      animation: fadeIn 0.4s ease-in-out;
      animation: clickme 5s infinite;
      cursor: pointer;
    }
    .estefania-shift {
      display: inline-block;
      transform: rotate(-2deg);
    }
    .scroll-cue {
      animation:
        pulseDown 2.6s ease-in-out infinite,
        glowPulse 3s ease-in-out infinite;
      letter-spacing: 0.04em;
      transition:
        transform 0.3s ease,
        box-shadow 0.3s ease,
        background-color 0.3s ease;
    }
    .scroll-cue .arrow-badge {
      animation: bob 1.2s ease-in-out infinite;
      transition: transform 0.2s ease;
    }
    .scroll-cue:hover {
      box-shadow: 0 12px 40px rgba(37, 62, 107, 0.35);
      background-color: color-mix(in srgb, var(--cd-oscuro) 90%, white 10%);
    }
    .scroll-cue:hover .arrow-badge {
      transform: translateY(2px);
    }
    @media screen and (min-width: 768px) and (max-width: 840px) {
      .estefania-shift {
        transform: rotate(-2deg) translateX(-5.5rem);
      }
    }
    @media screen and (min-width: 841px) and (max-width: 900px) {
      .estefania-shift {
        transform: rotate(-2deg) translateX(-3.5rem);
      }
    }
    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }
    @keyframes clickme {
      0% {
        transform: scale(1);
      }
      50% {
        transform: scale(1.05);
      }
      100% {
        transform: scale(1);
      }
    }
    @keyframes pulseDown {
      0%,
      100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(6px);
      }
    }
    @keyframes bob {
      0%,
      100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(3px);
      }
    }
    @keyframes glowPulse {
      0%,
      100% {
        box-shadow: 0 8px 24px rgba(37, 62, 107, 0.25);
      }
      50% {
        box-shadow: 0 12px 40px rgba(37, 62, 107, 0.45);
      }
    }
  </style>

  <!-- 

            
       <div class="relative">
        <div class="absolute -translate-x-1/2">
            <div class:list={["bg-[#54B5E6] w-64 h-11 -z-10 -rotate-2"]}></div>
            <div
                class:list={[
                    " w-64 h-11 -z-10 -rotate-2 mt-1",
                    "bg-linear-to-r from-[#EE4023] to-[#FDCD16] from-45% to-45%",
                ]}
            >
            </div>
        </div>
    </div>         
-->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const scrollButton = document.querySelector('.scroll-cue');
    
    scrollButton?.addEventListener('click', (e) => {
      e.preventDefault();
      
      const targetSection = document.querySelector('#noticias');
      if (!targetSection) return;
      
      const targetPosition = targetSection.offsetTop;
      const startPosition = window.pageYOffset;
      const distance = targetPosition - startPosition;
      const duration = 1500; // Duración en milisegundos (1.5 segundos)
      let start = null;
      
      // Función de easing para un movimiento más suave (ease-in-out)
      const easeInOutCubic = (t) => {
        return t < 0.5 
          ? 4 * t * t * t 
          : 1 - Math.pow(-2 * t + 2, 3) / 2;
      };
      
      const animation = (currentTime) => {
        if (start === null) start = currentTime;
        const timeElapsed = currentTime - start;
        const progress = Math.min(timeElapsed / duration, 1);
        const ease = easeInOutCubic(progress);
        
        window.scrollTo(0, startPosition + distance * ease);
        
        if (timeElapsed < duration) {
          requestAnimationFrame(animation);
        }
      };
      
      requestAnimationFrame(animation);
    });
  });
</script>

</section>
