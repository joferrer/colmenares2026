---
import { Image } from "astro:assets";
import CD_VOTO_MARCADO from "../../assets/logos/CD_VOTO_MARCADO.png";
---

<section
    class:list={[
        "relative flex flex-col max-w-7xl mx-auto rounded-2xl z-20 overflow-hidden p-6 md:p-8 bg-(--cd-oscuro) text-white shadow-[0_18px_50px_rgba(0,0,0,0.35)] ring-1 ring-white/10",
        " lg:items-center max-sm:mx-1!",
    ]}
>
    <div aria-hidden="true" class="pointer-events-none absolute inset-0">
        <div
            class="absolute -top-24 -left-16 h-56 w-56 rounded-full bg-white/10 blur-3xl"
        ></div>
        <div
            class="absolute -bottom-20 -right-10 h-52 w-52 rounded-full bg-(--cd-amarillo) opacity-12 blur-3xl"
        ></div>
        <div
            class="absolute inset-x-0 top-0 h-[2px] bg-linear-to-r from-transparent via-white/25 to-transparent blur-[1px]"
        ></div>
    </div>
    <div class="relative z-10 flex flex-col lg:flex-row lg:gap-6 items-center">
        <h1
            class="text-3xl md:text-5xl lg:text-7xl font-extrabold text-(--cd-amarillo) text-center tracking-tight drop-shadow-[0_6px_20px_rgba(0,0,0,0.35)]"
        >
            Vota así al Senado
        </h1>
        <div
            class="mt-5 bg-white rounded-md max-sm:w-56 max-md:w-60 max-w-sm lg:mt-0 p-3 shadow-[0_10px_30px_rgba(0,0,0,0.25)] ring-1 ring-black/10 transition-transform duration-300 hover:-translate-y-1"
        >
            <Image src={CD_VOTO_MARCADO} alt="Vota al Centro Democrático" />
        </div>
    </div>

    <div class="relative z-10 w-full flex items-center mt-4 justify-center">
        <span class="text-center text-base md:text-lg text-white/80 max-w-2xl"
            >Trabajando por Colombia con responsabilidad y compromiso</span
        >
    </div>
</section>
