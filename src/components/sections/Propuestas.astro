---
import { Image } from "astro:assets";
import iconPropuestas from "../../assets/iconos/ICONOS_INDIVIDUALES-19.png";

const propuestas = [
  {
    title: "Seguridad y convivencia",
    desc: "Refuerzo inteligente con tecnología, más presencia comunitaria y justicia rápida en barrios críticos.",
    tag: "Confianza",
  },
  {
    title: "Empleo y emprendimiento",
    desc: "Créditos blandos y formación exprés para jóvenes y mujeres; compras públicas que impulsen pymes locales.",
    tag: "Impulso",
  },
  {
    title: "Salud cercana",
    desc: "Rutas móviles de atención, telemedicina rural y priorización de salud mental en colegios y barrios.",
    tag: "Cuidado",
  },
  {
    title: "Educación del futuro",
    desc: "Dobles jornadas con énfasis en STEM y bilingüismo, aulas digitales y alianzas universidad-empresa.",
    tag: "Futuro",
  },
  {
    title: "Campo productivo",
    desc: "Vías terciarias, tecnificación y cadenas cortas de comercialización para aumentar ingresos rurales.",
    tag: "Territorio",
  },
];
---

<section class="segmento container mx-auto max-w-7xl px-4 md:px-6 lg:px-8 pt-12 md:pt-16">
  <div class="propuestas-card">
    <Image
      src={iconPropuestas}
      alt="Marca de propuestas"
      class="watermark-icon"
      loading="lazy"
    />
    <div class="propuestas-header">
      <div class="titles">
        <span class="pill">Propuestas</span>
        <h2 class="prop-heading">Lo que vamos a lograr juntos</h2>
        <p class="prop-lede">
          Cinco frentes claros para transformar el territorio con soluciones
          medibles y cercanas a la gente.
        </p>
      </div>
    </div>

    <div class="grid">
      {propuestas.map((p) => (
        <article class="prop-card">
          <div class="prop-top">
            <span class="tag">{p.tag}</span>
            <h3>{p.title}</h3>
          </div>
          <p>{p.desc}</p>
          <div class="bar" aria-hidden="true"></div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .propuestas-card {
    position: relative;
    overflow: hidden;
    border-radius: 1.75rem;
    background: white;
    border: 1px solid color-mix(in srgb, var(--cd-oscuro, #253e6b) 8%, white);
    box-shadow: 0 24px 60px -30px rgb(0 0 0 / 0.35);
    padding: clamp(1.5rem, 2vw, 2.5rem);
    ring: 1px solid color-mix(in srgb, var(--cd-azul, #63b9e9) 18%, transparent);
  }

  .propuestas-card::before {
    content: "";
    position: absolute;
    border-radius: 999px;
    filter: blur(50px);
    opacity: 0.35;
    z-index: 0;
    width: 18rem;
    height: 18rem;
    background: color-mix(in srgb, var(--cd-azul, #63b9e9) 60%, transparent);
    top: -5rem;
    right: -6rem;
  }

  .watermark-icon {
    position: absolute;
    top: -3rem;
    right: -2rem;
    width: 220px;
    opacity: 0.08;
    transform: rotate(10deg);
    pointer-events: none;
    filter: drop-shadow(0 10px 22px rgb(0 0 0 / 0.2));
    z-index: 0;
  }

  .propuestas-header {
    position: relative;
    display: grid;
    gap: 1rem;
    align-items: center;
    z-index: 1;
    margin-bottom: 1.5rem;
  }

  .titles {
    display: grid;
    gap: 0.5rem;
  }

  .pill {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.3rem 0.9rem;
    border-radius: 999px;
    background: color-mix(in srgb, var(--cd-amarillo, #fec900) 18%, white);
    color: var(--cd-oscuro, #253e6b);
    font-size: 0.78rem;
    font-weight: 800;
    letter-spacing: 0.16em;
    text-transform: uppercase;
    width: fit-content;
  }

  .prop-heading {
    margin: 0;
    font-size: clamp(2.2rem, 3.8vw, 3.4rem);
    line-height: 1.05;
    font-weight: 900;
    letter-spacing: -0.01em;
    color: var(--cd-oscuro, #253e6b);
  }

  .prop-lede {
    margin: 0;
    color: color-mix(in srgb, var(--cd-oscuro, #253e6b) 75%, white);
    font-size: 1.08rem;
    line-height: 1.65;
    max-width: 44rem;
  }

  .grid {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(230px, 1fr));
    gap: 1rem;
    margin-top: 1rem;
  }

  .prop-card {
    position: relative;
    display: grid;
    gap: 0.65rem;
    padding: 1.2rem 1.2rem 1.1rem;
    border-radius: 1rem;
    background: white;
    border: 1px solid color-mix(in srgb, var(--cd-oscuro, #253e6b) 8%, white);
    box-shadow: 0 14px 30px -18px rgb(0 0 0 / 0.25);
    transition: transform 0.25s ease, box-shadow 0.25s ease, border-color 0.25s ease;
  }

  .prop-card:hover {
    transform: translateY(-6px);
    border-color: color-mix(in srgb, var(--cd-amarillo, #fec900) 50%, transparent);
    box-shadow: 0 20px 36px -16px rgb(0 0 0 / 0.28);
  }

  .prop-top {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.35rem;
  }

  .tag {
    padding: 0.35rem 0.75rem;
    border-radius: 999px;
    font-weight: 800;
    font-size: 0.78rem;
    color: var(--cd-oscuro, #253e6b);
    background: color-mix(in srgb, var(--cd-amarillo, #fec900) 28%, white);
    border: 1px solid color-mix(in srgb, var(--cd-amarillo, #fec900) 45%, transparent);
    align-self: flex-end;
  }

  h3 {
    margin: 0;
    font-size: 1.14rem;
    color: var(--cd-oscuro, #253e6b);
    flex: 1;
    font-weight: 800;
    letter-spacing: -0.01em;
  }

  .prop-card p {
    margin: 0;
    color: color-mix(in srgb, var(--cd-oscuro, #253e6b) 70%, white);
    line-height: 1.6;
    font-size: 1rem;
    font-weight: 500;
  }

  .bar {
    height: 4px;
    width: 44%;
    background: linear-gradient(
      90deg,
      var(--cd-amarillo, #fec900),
      color-mix(in srgb, var(--cd-azul, #63b9e9) 70%, white)
    );
    border-radius: 999px;
    margin-top: 0.35rem;
  }

  @keyframes pulse {
    0% {
      transform: scale(0.92);
      opacity: 0.9;
    }
    100% {
      transform: scale(1.4);
      opacity: 0;
    }
  }

  @media (max-width: 768px) {
    .propuestas-header {
      grid-template-columns: 1fr;
      justify-items: start;
    }
    .icon-wrap {
      width: 78px;
      height: 78px;
    }
    .icon {
      width: 62px;
      height: 62px;
    }
  }

  @media (max-width: 640px) {
    .tag {
      align-self: flex-end;
    }
  }
</style>
