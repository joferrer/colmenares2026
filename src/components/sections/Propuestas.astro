<section
  id="propuestas"
  class="segmento container mx-auto max-w-7xl px-4 md:px-6 lg:px-8 py-16 md:py-24"
>
  <div class="propuestas-card relative overflow-hidden rounded-3xl">
    <div class="propuestas-bg" aria-hidden="true"></div>
    <Image
      src={iconPropuestas}
      width={256}
      height={256}
      alt=""
      class="propuestas-icon"
      loading="lazy"
    />
    <div class="relative px-6 py-10 md:px-12 md:py-16 lg:px-20">
      <!-- Header -->
      <div class="header-section mb-12 md:mb-16">
        <span class="pill">Propuestas</span>
        <h2 class="main-title">
          Las tres batallas de Estefanía<br />en el Congreso
        </h2>
        <p class="main-subtitle">
          Lo que Estefanía va a <strong>defender</strong>, <strong
            >frenar</strong
          > y <strong>empujar</strong> desde el Congreso.
        </p>
      </div>

      <!-- Tres Ejes -->
      <div class="ejes-section mb-16 md:mb-20">
        <h3 class="section-heading">Tres ejes fundamentales</h3>
        <div class="ejes-grid">
          {
            ejes.map((eje, index) => (
              <article class="eje-card">
                <div class="eje-number">0{index + 1}</div>
                <div class="eje-body">
                  <p class="eje-lead">{eje.lead}</p>
                  <h4 class="eje-title">{eje.title}</h4>
                  <p class="eje-problem">{eje.problem}</p>
                  <p class="eje-solution">{eje.solution}</p>
                </div>
              </article>
            ))
          }
        </div>
      </div>

      <!-- Batallas - Preview Cards -->
      <div class="batallas-section">
        <h3 class="section-heading">Iniciativas desde el Congreso</h3>

        <div class="batallas-grid">
          {
            batallas.map((batalla, index) => (
              <article
                class={`batalla-card batalla-${batalla.color} cursor-pointer`}
                data-batalla-index={index}
              >
                <div class="batalla-header">
                  <span class="batalla-verb">{batalla.verb}</span>
                  <h4 class="batalla-title">{batalla.title}</h4>
                </div>

                <div class="batalla-preview">
                  <p class="preview-text">{batalla.items.length} iniciativas</p>
                  <button class="view-more-btn">Ver detalles →</button>
                </div>
              </article>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Modal -->
<div
  id="propuestas-modal"
  class="modal-overlay hidden"
  role="dialog"
  aria-modal="true"
  aria-hidden="true"
  aria-labelledby="modal-title"
  aria-describedby="modal-desc"
>
  <div class="modal-container" role="document" tabindex="-1">
    <button
      class="modal-close"
      id="modal-close"
      type="button"
      aria-label="Cerrar"
    >
      <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>

    <!-- Navigation Arrows -->
    <button
      class="modal-nav modal-nav-prev"
      id="modal-prev"
      type="button"
      aria-label="Anterior"
    >
      <svg
        width="28"
        height="28"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <polyline points="15 18 9 12 15 6"></polyline>
      </svg>
    </button>
    <button
      class="modal-nav modal-nav-next"
      id="modal-next"
      type="button"
      aria-label="Siguiente"
    >
      <svg
        width="28"
        height="28"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <polyline points="9 18 15 12 9 6"></polyline>
      </svg>
    </button>

    <!-- Modal Content -->
    <div id="modal-content" class="modal-content" aria-live="polite">
      <!-- Content will be injected by JavaScript -->
    </div>
  </div>
</div>

<script define:vars={{ batallas }}>
  let currentIndex = 0;
  const modal = document.getElementById("propuestas-modal");
  const modalContent = document.getElementById("modal-content");
  const closeButton = document.getElementById("modal-close");
  let lastActiveElement = null;
  let closeTimer = null;
  const HIDDEN_CLASS = "hidden";
  const OPEN_CLASS = "is-open";
  const CLOSE_DELAY = 200;
  const SWIPE_THRESHOLD = 45;
  const SWIPE_ALLOWED_TIME = 700;
  const SWIPE_ANIMATION_DURATION = 240;
  let touchStartX = 0;
  let touchStartY = 0;
  let touchStartTime = 0;
  let swipeTimer = null;
  function handleTouchStart(event) {
    if (!event.touches || event.touches.length !== 1) {
      return;
    }
    const touch = event.touches[0];
    touchStartX = touch.clientX;
    touchStartY = touch.clientY;
    touchStartTime = Date.now();
  }

  function handleTouchEnd(event) {
    if (
      !touchStartTime ||
      !event.changedTouches ||
      !event.changedTouches.length
    ) {
      return;
    }
    const touch = event.changedTouches[0];
    const deltaX = touch.clientX - touchStartX;
    const deltaY = touch.clientY - touchStartY;
    const elapsed = Date.now() - touchStartTime;
    touchStartX = 0;
    touchStartY = 0;
    touchStartTime = 0;
    if (elapsed > SWIPE_ALLOWED_TIME) {
      return;
    }
    if (Math.abs(deltaX) < SWIPE_THRESHOLD) {
      return;
    }
    if (Math.abs(deltaX) <= Math.abs(deltaY)) {
      return;
    }
    if (deltaX < 0) {
      goToNext();
      return;
    }
    goToPrev();
  }
  function applySwipeAnimation(direction) {
    if (!modalContent) {
      return;
    }
    const className = direction === "next" ? "swipe-left" : "swipe-right";
    modalContent.classList.remove("swipe-left", "swipe-right");
    void modalContent.offsetWidth;
    modalContent.classList.add(className);
    if (swipeTimer) {
      clearTimeout(swipeTimer);
    }
    swipeTimer = window.setTimeout(() => {
      modalContent.classList.remove("swipe-left", "swipe-right");
    }, SWIPE_ANIMATION_DURATION);
  }
  function openModal(index) {
    currentIndex = index;
    renderModalContent();
    if (modalContent) {
      modalContent.classList.remove("swipe-left", "swipe-right");
    }
    if (closeTimer) {
      clearTimeout(closeTimer);
      closeTimer = null;
    }
    lastActiveElement = document.activeElement;
    modal.classList.remove(HIDDEN_CLASS);
    requestAnimationFrame(() => modal.classList.add(OPEN_CLASS));
    modal.setAttribute("aria-hidden", "false");
    document.body.style.overflow = "hidden";
    if (closeButton) closeButton.focus();
  }

  function closeModal() {
    modal.classList.remove(OPEN_CLASS);
    modal.setAttribute("aria-hidden", "true");
    document.body.style.overflow = "";
    closeTimer = window.setTimeout(() => {
      modal.classList.add(HIDDEN_CLASS);
    }, CLOSE_DELAY);
    if (lastActiveElement && typeof lastActiveElement.focus === "function") {
      lastActiveElement.focus();
    }
  }
  function goToNext() {
    currentIndex = (currentIndex + 1) % batallas.length;
    renderModalContent();
    applySwipeAnimation("next");
  }
  function goToPrev() {
    currentIndex = (currentIndex - 1 + batallas.length) % batallas.length;
    renderModalContent();
    applySwipeAnimation("prev");
  }
  function goToIndex(index) {
    if (index === currentIndex) {
      return;
    }
    const direction = index > currentIndex ? "next" : "prev";
    currentIndex = index;
    renderModalContent();
    applySwipeAnimation(direction);
  }

  function renderModalContent() {
    const batalla = batallas[currentIndex];

    const itemsHTML = batalla.items
      .map(
        (item) => `
      <div class="batalla-item">
        <h5 class="item-title">${item.title}</h5>
        <p class="item-desc">${item.desc}</p>
      </div>
    `,
      )
      .join("");

    const dotsHTML = batallas
      .map(
        (item, idx) => `
      <button
        type="button"
        class="dot ${idx === currentIndex ? "dot-active" : ""}"
        data-dot-index="${idx}"
        aria-label="Ver ${item.verb} ${item.title}"
        ${idx === currentIndex ? 'aria-current="true"' : ""}
      ></button>
    `,
      )
      .join("");

    modalContent.className = `modal-content batalla-${batalla.color}`;
    modalContent.innerHTML = `
      <article class="batalla-card batalla-${batalla.color} modal-batalla-card">
        <div class="batalla-header">
          <span class="batalla-verb">${batalla.verb}</span>
          <h3 id="modal-title" class="batalla-title">${batalla.title}</h3>
          <p id="modal-desc" class="modal-summary">${batalla.items.length} iniciativas</p>
        </div>

        <div class="batalla-items">
          ${itemsHTML}
        </div>
      </article>

      <div class="modal-dots" aria-label="Cambiar batalla">
        ${dotsHTML}
      </div>
    `;
    modalContent.scrollTop = 0;

    // Add event listeners to dots
    document.querySelectorAll(".dot").forEach((dot) => {
      dot.addEventListener("click", () => {
        const index = parseInt(dot.dataset.dotIndex);
        goToIndex(index);
      });
    });
  }

  // Event listeners
  document.querySelectorAll(".batalla-card").forEach((card) => {
    const index = parseInt(card.dataset.batallaIndex);
    card.setAttribute("role", "button");
    card.setAttribute("tabindex", "0");
    card.setAttribute("aria-haspopup", "dialog");
    card.addEventListener("click", () => {
      openModal(index);
    });
    card.addEventListener("keydown", (e) => {
      if (e.key === "Enter" || e.key === " ") {
        e.preventDefault();
        openModal(index);
      }
    });
  });

  document.getElementById("modal-close").addEventListener("click", closeModal);
  document.getElementById("modal-prev").addEventListener("click", goToPrev);
  document.getElementById("modal-next").addEventListener("click", goToNext);

  if (modalContent) {
    modalContent.addEventListener("touchstart", handleTouchStart, {
      passive: true,
    });
    modalContent.addEventListener("touchend", handleTouchEnd, {
      passive: true,
    });
  }
  modal.addEventListener("click", (e) => {
    if (e.target.id === "propuestas-modal") {
      closeModal();
    }
  });

  // Keyboard navigation
  document.addEventListener("keydown", (e) => {
    if (!modal.classList.contains(HIDDEN_CLASS)) {
      if (e.key === "Escape") closeModal();
      if (e.key === "ArrowLeft") goToPrev();
      if (e.key === "ArrowRight") goToNext();
    }
  });
</script>

